extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/forms.css")
block content
    .grid
        .card.login-card
            form.login-form(action="/login",method="post")
                .form-control
                    label.title(for="email") Email
                    input(type="text",name="email",placeholder="Enter email")#email
                .form-control
                    label.title(for="password") Password
                    input(type="password",name="password",placeholder="Enter password")#password
                input(type="hidden",name="_csrf",value=csrfToken)
                button.btn(type="submit") Login 
                a.login-form__reset-password(href="/resetpassword") Reset Password

