extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/forms.css")
block content
    .grid
        .card.login-card
            form.login-form(action="/updatepass",method="post")
                .form-control
                    label.title(for="password") Password
                    input(type="password",name="password",placeholder="Enter password")#password
                .form-control
                    label.title(for="confirmpassword") Confirm Password
                    input(type="password",name="confirmpassword",placeholder="Enter password")#confirmpassword
                input(type="hidden",name="_csrf",value=csrfToken)
                input(type="hidden",name="userId",value=userId)
                input(type="hidden",name="token",value=token)
                button.btn(type="submit") Save Password

