extends ../layouts/main-layout.pug
block styles
    link(rel="stylesheet", href="/css/forms.css")
block content
    .grid
        .card.login-card
            form.login-form(action="/signup",method="post")
                .form-control
                    label.title(for="email") Email
                    input(type="text",name="email",placeholder="Enter email", value=oldInput.email, class= validationErrors.find(i=> i.param=="email")?"invalid":"" )#email
                .form-control
                    label.title(for="password") Password
                    input(type="password",name="password",placeholder="Enter password", value=oldInput.password)#password
                .form-control
                    label.title(for="confirmpassword") Confirm Password
                    input(type="password",name="confirmpassword",placeholder="Enter password", value=oldInput.confirmpassword)#confirmpassword
                input(type="hidden",name="_csrf",value=csrfToken)
                button.btn(type="submit") Signup

